{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vidvera/core": ["libs/core/src/index.ts"],
      "@vidvera/shared": ["libs/shared/src/index.ts"],
      "@vidvera/web-ui": ["libs/web-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
